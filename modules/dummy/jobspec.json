{
  "ID": "hello-world",
  "Name": "hello-world",
  "TaskGroups": [
    {
      "Name": "servers",
      "Tasks": [
        {
          "Name": "web",
          "Driver": "docker",
          "Config": {
            "image": "busybox:1",
            "command": "httpd",
            "args": [
              "-v",
              "-f",
              "-p",
              "${NOMAD_PORT_www}",
              "-h",
              "/local"
            ],
            "ports": [
              "www"
            ],
            "logging": {
              "type": "elastic/elastic-logging-plugin:8.14.3",
              "config": [
                {
                  "hosts": "http://localhost:9200",
                  "user": "docker_writer",
                  "password": "oi*YWZSP_Ukd0y+pQ7EB"
                }
              ]
            }
          },
          "Templates": [
            {
              "DestPath": "local/index.html",
              "EmbeddedTmpl": "<h1>Hello, Ben!</h1>\n"
            }
          ],
          "Resources": {
            "CPU": 50,
            "MemoryMB": 64
          }
        }
      ],
      "Networks": [
        {
          "DynamicPorts": [
            {
              "Label": "www",
              "To": 8001
            }
          ]
        }
      ],
      "Services": [
        {
          "PortLabel": "www",
          "Provider": "nomad",
          "Name": "web",
          "Tags": [
            "traefik.enable=true",
            "traefik.http.routers.web.entrypoints=websecure",
            "traefik.http.routers.web.rule=Host(`hello-world.brmartin.co.uk`)"
          ]
        }
      ]
    }
  ]
}