{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "timezone": "Europe/London",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Group all Terraform provider updates",
      "matchDatasources": [
        "terraform-provider"
      ],
      "groupName": "terraform-providers",
      "labels": [
        "terraform",
        "dependencies"
      ]
    },
    {
      "description": "Group all K8s module Docker image updates",
      "matchFileNames": [
        "modules-k8s/**/*.tf"
      ],
      "groupName": "k8s-images",
      "labels": [
        "kubernetes",
        "docker",
        "dependencies"
      ]
    },
    {
      "description": "Separate major updates from minor/patch",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major-update"
      ],
      "automerge": false
    },
    {
      "description": "Auto-merge patch updates",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Pin Terraform version updates",
      "matchDatasources": [
        "terraform-version"
      ],
      "groupName": "terraform-version"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in Terraform K8s modules",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "modules-k8s/.*\\.tf$"
      ],
      "matchStrings": [
        "\\s*image\\s*=\\s*\"(?<depName>[^:]+):(?<currentValue>[^\"]+)\""
      ]
    },
    {
      "customType": "regex",
      "description": "Update Docker images in Terraform variables with renovate comment",
      "datasourceTemplate": "docker",
      "fileMatch": [
        "\\.tf$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*image=(?<depName>[^\\s]+)\\n\\s*default\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ]
    }
  ],
  "ignoreDeps": [],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
